{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% if settings.collection_slider %}
<div id="collection-slider" class="flexslider">
  <ul class="slides">
    {% if settings.snow_collection_slider %}
    <span class="snow"></span>
    {% endif %}
    {% for i in (1..5) %}
    {% assign show = 'collection_slider_' | append: i %}
    {% if settings[show] %}
    {% assign link = 'collection_slider_link_' | append: i %}
    {% assign image = 'collection_slider_img_' | append: i %}
    <li>
      <div class="slide-body">
        <a href="{{settings[link]}}">
          <img src="{% comment %}ly_asset_replace_for_[ image | append: '.jpg' | asset_url ]_begin{% endcomment %}{% assign ly_asset = image | append: '.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" alt="" />
        </a>
      </div>
    </li>
    {% endif %}
    {% endfor %}
  </ul>
</div>
{% comment %}ly_asset_replace_for_[ 'jquery.flexslider-min.js' | asset_url | script_tag ]_begin{% endcomment %}{% assign ly_asset = 'jquery.flexslider-min.js' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  | script_tag }}{% comment %}ly_asset_replace_end{% endcomment %}
<script>
  jQuery("#collection-slider").flexslider({
    animation: "fade",
    prevText: "",
    nextText: "",
    slideshow: true,
    controlNav: true,
    directionNav: false,
    start: function(e) {
      jQuery("body").removeClass("loading")
    }
  });
</script>
{% endif %}