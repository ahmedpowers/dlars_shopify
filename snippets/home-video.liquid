{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<div id="home-video">
  <div class="video_width">
    <h1 class="video_heading">{{ settings.video_heading }}</h1>
    <p class="video_caption">{{ settings.video_caption }}</p>
    {% if settings.video_call_to_action != blank and settings.video_url != blank %}
    <div class="video_action">
      <a class="btn-arrow btn btn-1" href="{{settings.video_url}}"><i class="icomoon-arrow-right"></i> {{ settings.video_call_to_action }}</a>
    </div>
    {% endif %}
  </div>
  
  <div class="img-video">
    <img src="{% comment %}ly_asset_replace_for_['video_image.jpg' | asset_url]_begin{% endcomment %}{% assign ly_asset = 'video_image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" alt="" />
  </div>

  <video poster="{% comment %}ly_asset_replace_for_['video_image.jpg' | asset_url]_begin{% endcomment %}{% assign ly_asset = 'video_image.jpg' %}{% include 'ly-asset' with ly_asset %}{{ ly_translation  }}{% comment %}ly_asset_replace_end{% endcomment %}" class="bg-video js-is-active" autoplay="true" muted="" loop="" volume="0" canplay="false">
    <source src="{{settings.video_link}}" type="video/mp4" />
  </video>
</div>