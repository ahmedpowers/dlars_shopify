{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}{% if settings.promo_block_enabel %}
<div class="promotion">
  {% if settings.snow_home_promotion_block %}
  <span class="snow"></span>
  {% endif %}
  <div class="container">
    {% if settings.promo_block_heading != blank %}
    <h2 class="title animated">
      {% comment %}ly_new_settings_replace_for_[ settings.promo_block_heading ]_begin{% endcomment %}{% if request.host %}{% assign host = request.host %}{% assign domains = shop.metafields.language_domains %}{% for domain in domains %}{% assign key = domain | first %}{% assign value = domain | last | split: ',' %}{% if value contains host %}{% assign language = key %}{% endif %}{% endfor %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% else %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id2711919"] %}{% assign ly_translation = shop.metafields[namespace]["id2711919"] %}{% else %}{% assign ly_translation = settings.promo_block_heading %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}
    </h2>
    {% endif %}
    <div id="promotion">
      <div class="row">
        {% for i in (1..3) %}
        {% assign heading = 'promo_block_heading_' | append: i %}
        {% assign caption = 'promo_block_caption_' | append: i %}
        {% assign icon = 'promo_block_icon_' | append: i %}
        {% assign action = 'promo_block_action_' | append: i %}

        <div class="promo-item animated col-sm-4">
          <div class="inner">
            <div class="boxes_icon">
              <div class="inner_icon">
                <span class="icon">
                  {{settings[icon]}}
                </span>
              </div>
            </div>

            <div class="boxes_content">
              <div class="boxes_title">
                {% if settings[action] != blank %}
                <a href="{{settings[action]}}">{{settings[heading]}}</a>
                {% else %}
                {{settings[heading]}}
                {% endif %}
              </div>

              <div class="content_icon_box">
                {{settings[caption]}}
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      {% if settings.promo_block_action != blank %}
      <div class="promo-btn animated">
        <a href="{{settings.promo_block_url}}" class="btn ripple">{% comment %}ly_new_settings_replace_for_[ settings.promo_block_action ]_begin{% endcomment %}{% if request.host %}{% assign host = request.host %}{% assign domains = shop.metafields.language_domains %}{% for domain in domains %}{% assign key = domain | first %}{% assign value = domain | last | split: ',' %}{% if value contains host %}{% assign language = key %}{% endif %}{% endfor %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% else %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id2711920"] %}{% assign ly_translation = shop.metafields[namespace]["id2711920"] %}{% else %}{% assign ly_translation = settings.promo_block_action %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</a>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endif %}